<%= form_for(@task, html: { class: "form-horizontal form-section " }, remote: true ) do |f| %>
  <ul class="errors"></ul>
  <div class="form-group">
    <div class="col-sm-4">
      <%= f.text_field :title, class: "form-control input-sm", placeholder: 'Title' %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :description, class: 'form-control input-sm', placeholder: 'Description' %>
    </div>
    <div class="col-sm-2">
      <%= button_tag "", type: 'submit', class: "btn btn-default btn-sm glyphicon glyphicon-ok pull-right" %>
      <button type="button" class="btn btn-default btn-sm glyphicon glyphicon-remove pull-right js-cancel"></button>
    </div>
  </div>
<% end %>

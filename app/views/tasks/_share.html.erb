<section class="form-section search-form">
  <%= form_tag(create_share_task_path, :method => :post,  class: "form-horizontal", remote: true ) do %>
    <div class="form-group">
      <div class="col-xs-8">
        <%= hidden_field_tag 'user[id]', ''  %>
        <%= text_field_tag 'user[email]', '', class:'typeahead form-control input-sm', required: true %>
      </div>
      <div class="col-xs-2">
        <%= button_tag "", type: 'submit', class: "btn btn-default btn-sm glyphicon glyphicon-ok pull-right" %>
        <button type="button" class="btn btn-default btn-sm glyphicon glyphicon-remove pull-right js-cancel"></button>
      </div>
    </div>
  <% end %>
</section>